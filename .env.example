# Copy this file to .env and update with your actual values

# App Configuration
PORT=3001
NODE_ENV=development
CORS_ORIGIN=http://localhost:3000

# Database (PostgreSQL)
# For local development with docker-compose:
DATABASE_URL=postgresql://litebox:litebox@localhost:5432/litebox?schema=public

# For AWS RDS/Aurora (production):
# DATABASE_URL=postgresql://USER:PASSWORD@RDS_ENDPOINT:5432/DB_NAME?schema=public&sslmode=require

# AWS Configuration
AWS_REGION=us-east-2
# Leave blank if using IAM roles (EC2/ECS)
AWS_ACCESS_KEY_ID=your_access_key_here
AWS_SECRET_ACCESS_KEY=your_secret_key_here

# S3 Configuration
S3_BUCKET=your-bucket-name
# Base path for S3 keys (e.g., 'lite-box') - all uploads will be under this prefix
AWS_S3_BASE_PATH=lite-box
# Optional: CloudFront distribution URL (not used with presigned URLs)
# S3_PUBLIC_BASE_URL=https://your-distribution.cloudfront.net

# File Upload Configuration
MAX_FILE_SIZE=5242880  # 5MB in bytes


